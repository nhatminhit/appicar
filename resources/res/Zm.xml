<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/view_tv_and_radio" android:tag="layout/fragment_tv_square_screen_0" android:focusable="true" android:layout_width="match_parent" android:layout_height="match_parent" android:keepScreenOn="true">
    <View android:id="@+id/view" android:background="#434343" android:visibility="gone" android:layout_width="@dimen/size245dp" android:layout_height="@dimen/size1dp" android:layout_marginLeft="@dimen/size42dp"/>
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout android:orientation="horizontal" android:id="@+id/refresh_recycler_channels" android:background="#1f2225" android:layout_width="match_parent" android:layout_height="@dimen/size133dp" android:layout_marginTop="@dimen/size10dp" android:layout_above="@+id/layout_advertisement">
        <androidx.recyclerview.widget.RecyclerView android:id="@+id/recycler_channels" android:background="#1f2225" android:layout_width="match_parent" android:layout_height="@dimen/size133dp" android:layout_above="@+id/layout_advertisement" app:layoutManager="androidx.recyclerview.widget.GridLayoutManager" app:spanCount="2"/>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    <com.google.android.exoplayer2.ui.PlayerView android:id="@+id/player_view" android:background="#000000" android:focusable="true" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/refresh_recycler_channels">
        <ProgressBar android:layout_gravity="center" android:id="@+id/progress_bar" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </com.google.android.exoplayer2.ui.PlayerView>
    <RelativeLayout android:id="@+id/view_on_touch_listener" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/refresh_recycler_channels"/>
    <RelativeLayout android:id="@+id/view_on_touch_listener_radio" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/refresh_recycler_channels">
        <pl.droidsonroids.gif.GifTextView android:background="@drawable/gif_radio_background" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="centerCrop"/>
        <ImageView android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/ic_bg_radio2" android:scaleType="centerCrop"/>
        <ImageView android:paddingBottom="@dimen/size88dp" android:layout_width="@dimen/size340dp" android:layout_height="wrap_content" android:src="@drawable/ic_radio_online" android:layout_centerInParent="true"/>
        <androidx.cardview.widget.CardView android:id="@+id/card_img_logo_channel" android:layout_width="@dimen/size100dp" android:layout_height="@dimen/size100dp" android:layout_marginLeft="@dimen/size32dp" android:layout_marginBottom="@dimen/size22dp" android:layout_alignParentBottom="true" app:cardCornerRadius="@dimen/size50dp">
            <ImageView android:id="@+id/img_logo_channel" android:layout_width="match_parent" android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>
        <TextView android:textSize="@dimen/size17dp" android:textColor="#ffffff" android:id="@+id/txt_categories" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/size22dp" android:layout_marginRight="@dimen/size22dp" android:text="Kiên giang" android:layout_toRightOf="@+id/card_img_logo_channel" android:layout_above="@+id/txt_name_channels" android:fontFamily="@font/svn_poppins_semibold" android:layout_marginHorizontal="@dimen/size22dp"/>
        <TextView android:textSize="@dimen/size13dp" android:textColor="#ffffff" android:id="@+id/txt_name_channels" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/size22dp" android:layout_marginRight="@dimen/size22dp" android:layout_marginBottom="@dimen/size44dp" android:text="Kiên giang" android:layout_toRightOf="@+id/card_img_logo_channel" android:layout_alignParentBottom="true" android:fontFamily="@font/svn_poppins_regular" android:layout_marginHorizontal="@dimen/size22dp"/>
        <ImageView android:id="@+id/img_next" android:padding="@dimen/size32dp" android:layout_width="@dimen/size88dp" android:layout_height="@dimen/size88dp" android:layout_marginRight="@dimen/size32dp" android:layout_marginBottom="@dimen/size22dp" android:src="@drawable/ic_next" android:layout_alignParentRight="true" android:layout_alignParentBottom="true"/>
        <ImageView android:id="@+id/img_play" android:padding="@dimen/size12dp" android:layout_width="@dimen/size88dp" android:layout_height="@dimen/size88dp" android:layout_marginBottom="@dimen/size22dp" android:src="@drawable/ic_pause" android:layout_toLeftOf="@+id/img_next" android:layout_alignParentBottom="true"/>
        <ImageView android:id="@+id/img_pause" android:padding="@dimen/size12dp" android:visibility="gone" android:layout_width="@dimen/size88dp" android:layout_height="@dimen/size88dp" android:layout_marginBottom="@dimen/size22dp" android:src="@drawable/ic_play" android:layout_toLeftOf="@+id/img_next" android:layout_alignParentBottom="true"/>
        <ImageView android:id="@+id/img_back" android:padding="@dimen/size32dp" android:layout_width="@dimen/size88dp" android:layout_height="@dimen/size88dp" android:layout_marginBottom="@dimen/size22dp" android:src="@drawable/ic_back_play" android:layout_toLeftOf="@+id/img_play" android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/layout_advertisement" android:background="#1f2225" android:layout_width="match_parent" android:layout_height="@dimen/size32dp" android:layout_marginTop="@dimen/size4dp" android:layout_alignParentBottom="true">
        <TextView android:textSize="@dimen/size12dp" android:textColor="#ffffff" android:ellipsize="end" android:id="@+id/txt_playing" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="" android:maxLines="2" android:layout_centerVertical="true" android:fontFamily="@font/svn_poppins_semibold" android:layout_marginEnd="@dimen/size20dp" android:layout_toEndOf="@+id/img_news"/>
        <ImageView android:id="@+id/img_news" android:layout_width="@dimen/size110dp" android:layout_height="@dimen/size32dp" android:src="@drawable/ic_play" android:scaleType="fitStart" android:layout_centerVertical="true"/>
    </RelativeLayout>
</RelativeLayout>
