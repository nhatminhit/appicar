<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView android:layout_width="@dimen/size440dp" android:layout_height="wrap_content" app:cardCornerRadius="@dimen/size20dp">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView android:textSize="@dimen/size18dp" android:textColor="#1f2225" android:id="@+id/title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/size32dp" android:layout_marginTop="@dimen/size15dp" android:text="ICAR Entertainment" android:fontFamily="@font/svn_poppins_semibold"/>
            <TextView android:textSize="@dimen/size8dp" android:textColor="#1f2225" android:id="@+id/text_license_type_string" android:background="@drawable/tab_background" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/size10dp" android:layout_marginTop="@dimen/size23dp" android:text="" android:layout_toRightOf="@+id/title" android:fontFamily="@font/svn_poppins_regular"/>
            <ImageView android:id="@+id/img_back" android:padding="@dimen/size10dp" android:layout_width="@dimen/size42dp" android:layout_height="@dimen/size42dp" android:layout_marginTop="@dimen/size5dp" android:layout_marginRight="@dimen/size22dp" android:src="@drawable/ic_exit" android:layout_alignParentRight="true"/>
            <View android:id="@+id/view" android:background="#d1d1d1" android:layout_width="match_parent" android:layout_height="@dimen/size1dp" android:layout_marginLeft="@dimen/size32dp" android:layout_marginRight="@dimen/size32dp" android:layout_below="@+id/title" android:layout_marginHorizontal="@dimen/size32dp"/>
            <TextView android:textSize="@dimen/size16dp" android:textColor="#1f2225" android:id="@+id/txt_version" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/size32dp" android:layout_marginTop="@dimen/size15dp" android:text="@string/version" android:layout_below="@+id/view" android:fontFamily="@font/svn_poppins_semibold"/>
            <TextView android:textSize="@dimen/size16dp" android:textColor="#1f2225" android:id="@+id/text_version" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/size60dp" android:layout_marginTop="@dimen/size15dp" android:text="3.35" android:layout_toRightOf="@+id/txt_version" android:layout_below="@+id/view" android:fontFamily="@font/svn_poppins_regular"/>
            <TextView android:textSize="@dimen/size16dp" android:textColor="#1f2225" android:id="@+id/txt_developers" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/size32dp" android:layout_marginTop="@dimen/size10dp" android:text="@string/developers" android:layout_below="@+id/txt_version" android:fontFamily="@font/svn_poppins_semibold"/>
            <TextView android:textSize="@dimen/size15dp" android:textColor="#1f2225" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/size60dp" android:layout_marginTop="@dimen/size10dp" android:text="ICAR Việt Nam" android:layout_toRightOf="@+id/txt_version" android:layout_below="@+id/txt_version" android:fontFamily="@font/svn_poppins_regular"/>
            <TextView android:textSize="@dimen/size16dp" android:textColor="#1f2225" android:id="@+id/txt_license" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/size32dp" android:layout_marginTop="@dimen/size10dp" android:text="@string/duration" android:layout_below="@+id/txt_developers" android:fontFamily="@font/svn_poppins_semibold"/>
            <TextView android:textSize="@dimen/size15dp" android:textColor="#1f2225" android:id="@+id/txt_time_license" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/size60dp" android:layout_marginTop="@dimen/size10dp" android:text="" android:layout_toRightOf="@+id/txt_version" android:layout_below="@+id/txt_developers" android:fontFamily="@font/svn_poppins_regular"/>
            <TextView android:textSize="@dimen/size16dp" android:textColor="#1f2225" android:id="@+id/txt_feature" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/size32dp" android:layout_marginTop="@dimen/size10dp" android:text="@string/feature" android:layout_below="@+id/txt_license" android:fontFamily="@font/svn_poppins_semibold"/>
            <TextView android:textSize="@dimen/size16dp" android:textColor="#1f2225" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/size32dp" android:layout_marginBottom="@dimen/size15dp" android:text="@string/conten_feature" android:layout_below="@+id/txt_feature" android:fontFamily="@font/svn_poppins_regular"/>
            <RelativeLayout android:id="@+id/view_update" android:background="@drawable/bg_logo_channel" android:paddingLeft="@dimen/size6dp" android:paddingRight="@dimen/size12dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/size10dp" android:layout_marginRight="@dimen/size32dp" android:layout_below="@+id/view" android:layout_alignParentRight="true">
                <ImageView android:id="@+id/img_update" android:padding="@dimen/size6dp" android:layout_width="@dimen/size27dp" android:layout_height="@dimen/size27dp" android:src="@drawable/ic_update"/>
                <TextView android:textSize="@dimen/size13dp" android:textColor="#ffffff" android:id="@+id/txt_update" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Cập nhật" android:layout_toRightOf="@+id/img_update" android:layout_centerVertical="true" android:fontFamily="@font/svn_poppins_medium"/>
            </RelativeLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
