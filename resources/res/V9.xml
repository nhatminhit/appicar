<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@android:color/transparent" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <ImageView android:id="@+id/imgBackground" android:layout_width="@dimen/size540dp" android:layout_height="@dimen/size600dp" android:src="@drawable/bg_box" android:layout_centerInParent="true"/>
    <RelativeLayout android:id="@+id/viewTab" android:layout_width="0dp" android:layout_height="0dp" android:layout_alignTop="@+id/imgBackground" android:layout_alignBottom="@+id/imgBackground" android:layout_alignStart="@+id/imgBackground" android:layout_alignEnd="@+id/imgBackground">
        <ImageView android:id="@+id/imgList" android:padding="@dimen/size15dp" android:layout_width="@dimen/size50dp" android:layout_height="@dimen/size50dp" android:layout_marginTop="@dimen/size25dp" android:layout_marginRight="@dimen/size70dp" android:src="@drawable/ic_selection" android:layout_alignParentRight="true"/>
        <RelativeLayout android:id="@+id/viewDown" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/size70dp" android:layout_marginTop="@dimen/size40dp">
            <ImageView android:id="@+id/imgDown" android:layout_width="@dimen/size25dp" android:layout_height="@dimen/size25dp" android:src="@drawable/ic_baseline_arrow_drop_down_24"/>
            <TextView android:textSize="@dimen/size15sp" android:textColor="#ffffff" android:id="@+id/txtCategories" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Radionline" android:layout_toRightOf="@+id/imgDown" android:fontFamily="@font/svn_poppins_medium"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/viewRadio" android:layout_width="match_parent" android:layout_height="@dimen/size285dp" android:layout_marginTop="@dimen/size15dp" android:layout_below="@+id/imgList"/>
        <ImageView android:id="@+id/imgLogo" android:layout_width="@dimen/size200dp" android:layout_height="@dimen/size160dp" android:layout_marginTop="@dimen/size15dp" android:src="@drawable/ic_bg_img_widget" android:layout_above="@+id/txtChannels" android:layout_below="@+id/viewDown" android:layout_centerHorizontal="true" android:outlineProvider="background"/>
        <TextView android:textSize="@dimen/size25sp" android:textColor="#ffffff" android:ellipsize="end" android:id="@+id/txtChannels" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/size30dp" android:layout_marginTop="@dimen/size15dp" android:layout_marginRight="@dimen/size30dp" android:text="Kiên giang" android:maxLines="1" android:layout_above="@+id/txtChannel" android:layout_centerHorizontal="true" android:fontFamily="@font/svn_poppins_semibold" android:layout_marginHorizontal="@dimen/size30dp"/>
        <TextView android:textSize="@dimen/size15sp" android:textColor="#ffffff" android:ellipsize="end" android:gravity="center" android:id="@+id/txtChannel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/size80dp" android:layout_marginRight="@dimen/size80dp" android:text="Kênh phát thanh Kiên Giang" android:maxLines="2" android:layout_above="@+id/viewControl" android:layout_centerHorizontal="true" android:fontFamily="@font/svn_poppins_regular" android:layout_marginHorizontal="@dimen/size80dp"/>
        <LinearLayout android:orientation="horizontal" android:id="@+id/viewControl" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/size20dp" android:layout_marginBottom="@dimen/size20dp" android:layout_above="@+id/txtTimePlaingVideo" android:layout_centerHorizontal="true">
            <ImageView android:id="@+id/imgback" android:padding="@dimen/size15dp" android:layout_width="@dimen/size50dp" android:layout_height="@dimen/size50dp" android:layout_marginRight="@dimen/size30dp" android:src="@drawable/ic_back_play"/>
            <ImageView android:id="@+id/imgPlay" android:layout_width="@dimen/size50dp" android:layout_height="@dimen/size50dp" android:src="@drawable/ic_pause"/>
            <ImageView android:id="@+id/imgnext" android:padding="@dimen/size15dp" android:layout_width="@dimen/size50dp" android:layout_height="@dimen/size50dp" android:layout_marginLeft="@dimen/size30dp" android:src="@drawable/ic_next"/>
        </LinearLayout>
        <ListView android:id="@+id/listTab" android:background="@drawable/bg_img_widget" android:visibility="gone" android:layout_width="match_parent" android:layout_height="@dimen/size200dp" android:layout_marginLeft="@dimen/size35dp" android:layout_marginRight="@dimen/size35dp" android:layout_below="@+id/viewDown" android:layout_marginHorizontal="@dimen/size35dp"/>
        <TextView android:textSize="@dimen/size12sp" android:textColor="#ffffff" android:id="@+id/txtTimePlaingVideo" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/size80dp" android:text="00:00" android:layout_above="@+id/progressBar" android:fontFamily="@font/svn_poppins_medium"/>
        <TextView android:textSize="@dimen/size12sp" android:textColor="#ffffff" android:id="@+id/txtTimeVideo" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/size80dp" android:text="00:00" android:layout_above="@+id/progressBar" android:layout_alignParentRight="true" android:fontFamily="@font/svn_poppins_medium"/>
        <ProgressBar android:id="@+id/progressBar" android:layout_width="match_parent" android:layout_height="2dp" android:layout_marginLeft="@dimen/size80dp" android:layout_marginRight="@dimen/size80dp" android:layout_marginBottom="@dimen/size50dp" android:progress="0" android:progressDrawable="@drawable/bg_processbar_widget" android:layout_alignParentBottom="true" android:layout_marginHorizontal="@dimen/size80dp" style="?android:attr/progressBarStyleHorizontal"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/viewListRadio" android:visibility="gone" android:layout_width="0dp" android:layout_height="0dp" android:layout_alignTop="@+id/imgBackground" android:layout_alignBottom="@+id/imgBackground" android:layout_alignStart="@+id/imgBackground" android:layout_alignEnd="@+id/imgBackground">
        <TextView android:textSize="@dimen/size15sp" android:textColor="#ffffff" android:id="@+id/txtList" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/size30dp" android:layout_marginTop="@dimen/size24dp" android:text="@string/playlists" android:fontFamily="@font/svn_poppins_medium"/>
        <ImageView android:id="@+id/imgClose" android:padding="@dimen/size12dp" android:layout_width="@dimen/size50dp" android:layout_height="@dimen/size50dp" android:layout_marginTop="@dimen/size12dp" android:layout_marginRight="@dimen/size20dp" android:src="@drawable/ic_close_widget" android:layout_alignParentRight="true"/>
        <ListView android:id="@+id/widgetListchannels" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="@dimen/size30dp" android:layout_marginRight="@dimen/size30dp" android:layout_marginBottom="@dimen/size50dp" android:layout_below="@+id/txtList" android:layout_marginHorizontal="@dimen/size30dp"/>
    </RelativeLayout>
</RelativeLayout>
