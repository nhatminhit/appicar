<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:tag="layout/fragment_music_and_video_offline_square_screen_0" android:layout_width="match_parent" android:layout_height="match_parent">
    <View android:id="@+id/view" android:background="#434343" android:visibility="gone" android:layout_width="@dimen/size245dp" android:layout_height="@dimen/size1dp" android:layout_marginLeft="@dimen/size42dp"/>
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout android:id="@+id/refresh_recycler_offline" android:background="#1f2225" android:layout_width="match_parent" android:layout_height="@dimen/size133dp" android:layout_marginTop="@dimen/size10dp" android:layout_above="@+id/layout_advertisement">
        <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
            <androidx.recyclerview.widget.RecyclerView android:id="@+id/recycler_offline" android:layout_width="match_parent" android:layout_height="@dimen/size133dp" android:layout_toLeftOf="@+id/view_loading_data" app:layoutManager="androidx.recyclerview.widget.GridLayoutManager" app:spanCount="2"/>
            <RelativeLayout android:id="@+id/view_loading_data" android:background="@color/transparent" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="@dimen/size133dp" android:layout_alignParentRight="true">
                <ProgressBar android:id="@+id/progress_loading" android:layout_width="@dimen/size42dp" android:layout_height="@dimen/size42dp" android:indeterminate="true" android:indeterminateDrawable="@drawable/progressbar_color" android:layout_centerInParent="true"/>
                <TextView android:textSize="@dimen/size18dp" android:textColor="#ffffff" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Đang cập nhật dữ liệu" android:layout_below="@+id/progress_loading" android:layout_centerHorizontal="true"/>
            </RelativeLayout>
        </RelativeLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    <RelativeLayout android:id="@+id/layout_advertisement" android:background="#1f2225" android:layout_width="match_parent" android:layout_height="@dimen/size32dp" android:layout_marginTop="@dimen/size4dp" android:layout_alignParentBottom="true">
        <TextView android:textSize="@dimen/size12dp" android:textColor="#ffffff" android:ellipsize="end" android:id="@+id/txt_playing" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="" android:maxLines="2" android:layout_centerVertical="true" android:fontFamily="@font/svn_poppins_semibold" android:layout_toEndOf="@+id/img_news"/>
        <ImageView android:id="@+id/img_news" android:visibility="visible" android:layout_width="@dimen/size110dp" android:layout_height="@dimen/size32dp" android:src="@drawable/ic_news" android:scaleType="fitStart" android:layout_centerVertical="true"/>
        <androidx.viewpager.widget.ViewPager android:id="@+id/advertisement" android:visibility="gone" android:layout_width="match_parent" android:layout_height="@dimen/size32dp" android:layout_toEndOf="@+id/img_news"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/view_play_music" android:background="#000000" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/refresh_recycler_offline">
        <SurfaceView android:id="@+id/surface_view" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true"/>
    </RelativeLayout>
    <pl.droidsonroids.gif.GifTextView android:id="@+id/view_music" android:background="@drawable/gif_music_offline" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="centerCrop" android:layout_above="@+id/refresh_recycler_offline"/>
    <RelativeLayout android:id="@+id/view_on_touch_listener" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/refresh_recycler_offline">
        <RelativeLayout android:id="@+id/view_progress_bar" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/size10dp" android:layout_alignParentBottom="true">
            <TextView android:textSize="@dimen/size22dp" android:textColor="#ffffff" android:id="@+id/txt_time_play" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/size10dp" android:text="00:00" android:includeFontPadding="false" android:layout_centerVertical="true"/>
            <ImageView android:id="@+id/img_play_type" android:padding="@dimen/size15dp" android:layout_width="@dimen/size62dp" android:layout_height="@dimen/size62dp" android:src="@drawable/ic_play_all" android:layout_alignParentRight="true"/>
            <TextView android:textSize="@dimen/size22dp" android:textColor="#ffffff" android:gravity="center" android:id="@+id/txt_time_video" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="00:00" android:includeFontPadding="false" android:layout_toLeftOf="@+id/img_play_type" android:layout_centerVertical="true"/>
            <SeekBar android:id="@+id/progress_bar" android:layout_width="match_parent" android:layout_height="@dimen/size22dp" android:progress="0" android:secondaryProgress="0" android:progressDrawable="@drawable/custom_progressbar" android:thumb="@drawable/custom_seekbar_thumb" android:layout_toLeftOf="@+id/txt_time_video" android:layout_toRightOf="@+id/txt_time_play" android:layout_centerVertical="true"/>
        </RelativeLayout>
        <ImageButton android:id="@+id/img_play" android:background="@color/transparent" android:visibility="gone" android:layout_width="@dimen/size110dp" android:layout_height="@dimen/size110dp" android:foreground="?android:attr/selectableItemBackground" android:src="@drawable/ic_baseline_play_arrow_24" android:layout_centerInParent="true"/>
        <RelativeLayout android:id="@+id/view_time" android:background="#80000000" android:paddingLeft="@dimen/size10dp" android:paddingRight="@dimen/size10dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="@dimen/size42dp" android:layout_centerInParent="true" android:paddingHorizontal="@dimen/size10dp">
            <TextView android:textSize="@dimen/size22dp" android:textColor="#ffffff" android:gravity="center" android:id="@+id/txt_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="+00:00(00:00)" android:layout_centerInParent="true"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
