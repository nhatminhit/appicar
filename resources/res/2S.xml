<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:background="@drawable/bg_popup" android:layout_width="@dimen/size420dp" android:layout_height="wrap_content" android:layout_centerInParent="true">
        <ImageView android:id="@+id/img_icon" android:layout_width="@dimen/size76dp" android:layout_height="@dimen/size76dp" android:layout_marginLeft="@dimen/size22dp" android:layout_marginTop="@dimen/size42dp" android:src="@drawable/ic_error"/>
        <TextView android:textSize="@dimen/size22dp" android:textColor="#ffffff" android:id="@+id/txt_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/size22dp" android:layout_marginTop="@dimen/size38dp" android:text="@string/notification_error" android:layout_toRightOf="@+id/img_icon" android:layout_centerHorizontal="true" android:fontFamily="@font/svn_poppins_semibold"/>
        <TextView android:textSize="@dimen/size18dp" android:textColor="#cccccc" android:id="@+id/txt_content" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/size22dp" android:layout_marginRight="@dimen/size22dp" android:layout_toRightOf="@+id/img_icon" android:layout_below="@+id/txt_title" android:layout_centerHorizontal="true" android:fontFamily="@font/svn_poppins_regular"/>
        <ProgressBar android:layout_width="@dimen/size42dp" android:layout_height="@dimen/size42dp" android:layout_marginTop="@dimen/size10dp" android:layout_marginBottom="@dimen/size22dp" android:indeterminate="true" android:indeterminateDrawable="@drawable/progressbar_color" android:layout_below="@+id/txt_content" android:layout_centerInParent="true"/>
    </RelativeLayout>
</RelativeLayout>
