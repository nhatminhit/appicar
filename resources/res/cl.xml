<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:tag="layout/fragment_youtobe_square_screen_0" android:layout_width="match_parent" android:layout_height="match_parent">
    <View android:id="@+id/view" android:background="#434343" android:visibility="gone" android:layout_width="@dimen/size245dp" android:layout_height="@dimen/size1dp" android:layout_marginLeft="@dimen/size42dp"/>
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout android:id="@+id/refresh_recycler_video" android:layout_width="match_parent" android:layout_height="@dimen/size133dp" android:layout_marginTop="@dimen/size10dp" android:layout_above="@+id/layout_advertisement">
        <androidx.recyclerview.widget.RecyclerView android:id="@+id/recycler_video" android:background="#1f2225" android:layout_width="match_parent" android:layout_height="@dimen/size133dp"/>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    <RelativeLayout android:id="@+id/view_loading_data" android:background="#80000000" android:visibility="gone" android:layout_width="match_parent" android:layout_height="@dimen/size133dp" android:layout_above="@+id/layout_advertisement">
        <ProgressBar android:layout_width="@dimen/size42dp" android:layout_height="@dimen/size42dp" android:indeterminate="true" android:indeterminateDrawable="@drawable/progressbar_color" android:layout_centerInParent="true"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/layout_advertisement" android:background="#1f2225" android:layout_width="match_parent" android:layout_height="@dimen/size32dp" android:layout_marginTop="@dimen/size4dp" android:layout_alignParentBottom="true">
        <TextView android:textSize="@dimen/size12dp" android:textColor="#ffffff" android:ellipsize="end" android:id="@+id/txt_playing" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="" android:maxLines="2" android:layout_toRightOf="@+id/img_news" android:layout_centerVertical="true" android:fontFamily="@font/svn_poppins_semibold" android:layout_marginEnd="@dimen/size20dp"/>
        <ImageView android:id="@+id/img_news" android:visibility="visible" android:layout_width="@dimen/size110dp" android:layout_height="@dimen/size32dp" android:src="@drawable/ic_news" android:scaleType="fitStart" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView android:gravity="center" android:id="@+id/youtube_player_view" android:background="#000000" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/refresh_recycler_video"/>
    <RelativeLayout android:gravity="center" android:id="@+id/rlt_youtube_player_view" android:background="#000000" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_above="@+id/refresh_recycler_video"/>
    <RelativeLayout android:id="@+id/view_on_touch_listener" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/refresh_recycler_video">
        <RelativeLayout android:id="@+id/view_progress_bar" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/size10dp" android:layout_alignParentBottom="true">
            <TextView android:textSize="@dimen/size22dp" android:textColor="#ffffff" android:id="@+id/txt_time_play" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/size10dp" android:text="00:00" android:includeFontPadding="false"/>
            <TextView android:textSize="@dimen/size22dp" android:textColor="#ffffff" android:gravity="center" android:id="@+id/txt_time_video" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/size10dp" android:text="00:00" android:includeFontPadding="false" android:layout_alignParentRight="true"/>
            <SeekBar android:id="@+id/progress_bar" android:layout_width="match_parent" android:layout_height="@dimen/size22dp" android:progress="0" android:secondaryProgress="0" android:progressDrawable="@drawable/custom_progressbar" android:thumb="@drawable/custom_seekbar_thumb" android:layout_toLeftOf="@+id/txt_time_video" android:layout_toRightOf="@+id/txt_time_play" android:layout_centerVertical="true"/>
        </RelativeLayout>
        <ImageButton android:id="@+id/img_play" android:background="@color/transparent" android:visibility="gone" android:layout_width="@dimen/size110dp" android:layout_height="@dimen/size110dp" android:foreground="?android:attr/selectableItemBackground" android:src="@drawable/ic_baseline_play_arrow_24" android:layout_centerInParent="true"/>
        <RelativeLayout android:id="@+id/view_time" android:background="#80000000" android:paddingLeft="@dimen/size10dp" android:paddingRight="@dimen/size10dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="@dimen/size42dp" android:layout_centerInParent="true" android:paddingHorizontal="@dimen/size10dp">
            <TextView android:textSize="@dimen/size22dp" android:textColor="#ffffff" android:gravity="center" android:id="@+id/txt_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="+00:00(00:00)" android:layout_centerInParent="true"/>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/view_click_video" android:background="#000000" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/refresh_recycler_video">
        <TextView android:textSize="@dimen/size22dp" android:textColor="#ffffff" android:gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Vui lòng chọn video từ danh sách bên trái" android:layout_centerInParent="true"/>
    </RelativeLayout>
</RelativeLayout>
