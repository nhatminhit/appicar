<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <androidx.cardview.widget.CardView android:layout_width="wrap_content" android:layout_height="@dimen/size395dp" app:cardCornerRadius="@dimen/size20dp">
        <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:textSize="@dimen/size15dp" android:textColor="#1f2225" android:id="@+id/txt_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/size32dp" android:layout_marginTop="@dimen/size18dp" android:text="@string/default_play_options" android:fontFamily="@font/svn_poppins_semibold"/>
            <View android:id="@+id/view" android:background="#dbdbdb" android:layout_width="@dimen/size310dp" android:layout_height="@dimen/size1dp" android:layout_marginLeft="@dimen/size32dp" android:layout_marginTop="@dimen/size13dp" android:layout_marginRight="@dimen/size32dp" android:layout_below="@+id/txt_title" android:layout_marginHorizontal="@dimen/size32dp"/>
            <TextView android:textSize="@dimen/size15dp" android:textStyle="bold" android:textColor="#1f2225" android:id="@+id/txt_model" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/size32dp" android:layout_marginTop="@dimen/size6dp" android:text="@string/type" android:layout_below="@+id/view" android:fontFamily="@font/svn_poppins_semibold"/>
            <TextView android:textSize="@dimen/size15dp" android:textStyle="bold" android:textColor="#1f2225" android:id="@+id/tv_folder" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/size32dp" android:text="@string/folder" android:layout_below="@+id/view_type" android:fontFamily="@font/svn_poppins_semibold"/>
            <LinearLayout android:orientation="horizontal" android:id="@+id/view_type" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/size32dp" android:layout_below="@+id/txt_model">
                <LinearLayout android:orientation="horizontal" android:id="@+id/view_radio_button_all" android:paddingTop="@dimen/size10dp" android:paddingBottom="@dimen/size10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:paddingVertical="@dimen/size10dp">
                    <ImageView android:id="@+id/image_radio_button_all" android:layout_width="@dimen/size22dp" android:layout_height="@dimen/size22dp" android:src="@drawable/ic_radio_button_on"/>
                    <TextView android:textSize="@dimen/size15dp" android:textColor="#1f2225" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/size10dp" android:text="@string/all"/>
                </LinearLayout>
                <LinearLayout android:orientation="horizontal" android:id="@+id/view_radio_button_music" android:paddingTop="@dimen/size10dp" android:paddingBottom="@dimen/size10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/size32dp" android:paddingVertical="@dimen/size10dp">
                    <ImageView android:id="@+id/image_radio_button_music" android:layout_width="@dimen/size22dp" android:layout_height="@dimen/size22dp" android:src="@drawable/ic_radio_button_off"/>
                    <TextView android:textSize="@dimen/size15dp" android:textColor="#1f2225" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/size10dp" android:text="@string/txt_music"/>
                </LinearLayout>
                <LinearLayout android:orientation="horizontal" android:id="@+id/view_radio_button_video" android:paddingTop="@dimen/size10dp" android:paddingBottom="@dimen/size10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/size32dp" android:paddingVertical="@dimen/size10dp">
                    <ImageView android:id="@+id/image_radio_button_video" android:layout_width="@dimen/size22dp" android:layout_height="@dimen/size22dp" android:src="@drawable/ic_radio_button_off"/>
                    <TextView android:textSize="@dimen/size15dp" android:textColor="#1f2225" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/size10dp" android:text="@string/video"/>
                </LinearLayout>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView android:id="@+id/recycler_folder" android:layout_width="@dimen/size310dp" android:layout_height="match_parent" android:layout_marginLeft="@dimen/size32dp" android:layout_marginTop="@dimen/size5dp" android:layout_marginBottom="@dimen/size22dp" android:layout_below="@+id/tv_folder"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
